<div class="banner">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>
<div class="container py-5">
	<div class="d-flex align-items-center justify-content-between mb-5">
		<h2 class="my-lists"> My Lists </h2>
		<%= link_to 'Create list', new_list_path, class: 'btn btn-primary'%>
	</div>	
	<div class="row">
		<% @lists.each do |list| %>
			<div class="co-12 colsm-6 col-md-6 mb-5">
				<%= link_to list_path(list), class:'text-decoration-none' do %>
					<div class="main-card card-style" style="background-image: url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('list.jpg') %>)">
						<p class="list-name"><%= list.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>