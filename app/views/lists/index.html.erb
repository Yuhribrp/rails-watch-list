<div class="banner">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>
<div class="container py-4">
	<div class="d-flex align-items-center justify-content-between mb-5">
		<h2> My Lists </h2>
		<%= link_to 'Create a movie list', new_list_path, class: 'btn btn-danger' %>
	</div>	
	<div class="row">
		<% @list.each do |list| %>
			<div class="co-12 colsm-6 col-md-4 mb-3">
				<%= link_to list_path(list), class:'text-decoration-none' do %>
					<div class="card-category">
						<%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>