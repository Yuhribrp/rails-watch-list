<div class="container py-4">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
				<h2><strong>Add a movie to your <%= @list.name %> list</h2>
					<%= simple_form_for [@list, @bookmark] do |f| %>
						<%= f.input :comment, placeholder: 'Enter a comment'%>
        		<%= f.association :movie, prompt: 'Select a movie', input_html: { class: 'select2' } %>
						<%= f.submit class: "btn btn-form", id: "button-form" %>
					<% end %>
	    </div>
    </div>
  </div>
</div>